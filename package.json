{
  "name": "art-connect",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "analyze": "ANALYZE=true next build",
    "start": "next start",
    "export": "next build && next export",
    "typecheck": "tsc --noEmit",
    "lint": "next lint && pnpm lint:stylelint",
    "lint:fix": "eslint --fix ./src/**/*.{ts,tsx}",
    "lint:stylelint": "stylelint ./src/**/*.css --cache",
    "prettier:check": "prettier --check './src/**/*.{ts,tsx}'",
    "prettier:write": "prettier --write './src/**/*.{ts,tsx}'",
    "format": "pnpm lint:fix && pnpm prettier:write",
    "types:check": "pnpm prettier:check && pnpm lint && pnpm typecheck && pnpm jest",
    "prepare": "sh ./.hooks/prepare.sh"
  },
  "dependencies": {
    "@mantine/carousel": "^7.9.1",
    "@mantine/core": "^7.10.0",
    "@mantine/hooks": "^7.10.0",
    "@reduxjs/toolkit": "^2.2.3",
    "@tabler/icons-react": "^3.3.0",
    "mongoose": "^8.4.0",
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18",
    "react-redux": "^9.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8.57.0",
    "eslint-config-mantine": "^3.2.0",
    "eslint-config-next": "14.2.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.15.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  }
}
