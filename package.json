{
  "name": "art-connect",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "analyze": "ANALYZE=true next build",
    "start": "next start",
    "export": "next build && next export",
    "typecheck": "tsc --noEmit",
    "lint": "next lint && pnpm lint:stylelint",
    "lint:fix": "eslint --cache --fix ./src/**/*.{ts,tsx}",
    "lint:stylelint": "stylelint ./src/**/*.css --cache",
    "prettier:check": "prettier --check './src/**/*.{ts,tsx}'",
    "prettier:write": "prettier --write './src/**/*.{ts,tsx}'",
    "format": "pnpm prettier:write && pnpm lint:fix",
    "types:check": "pnpm prettier:check && pnpm lint && pnpm typecheck && pnpm jest",
    "prepare": "chmod +x ./.hooks/prepare.sh && sh ./.hooks/prepare.sh"
  },
  "dependencies": {
    "@mantine/carousel": "^7.10.1",
    "@mantine/core": "^7.10.0",
    "@mantine/hooks": "^7.10.0",
    "@reduxjs/toolkit": "^2.2.3",
    "@tabler/icons-react": "^3.3.0",
    "cookie": "^0.6.0",
    "jose": "^5.4.0",
    "mongoose": "^8.4.0",
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18",
    "react-redux": "^9.1.2",
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8.57.0",
    "eslint-config-mantine": "^3.2.0",
    "eslint-config-next": "14.2.3",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.15.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
